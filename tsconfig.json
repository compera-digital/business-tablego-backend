{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "./dist",
    "baseUrl": "src",
    "rootDir": "./",
    "typeRoots" : ["./src/types"],
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
